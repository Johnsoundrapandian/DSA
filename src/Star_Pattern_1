class Star_Pattern_1{
   public static void main(String[] args){
      for(int i =1 ; i<=7 ; i++){
         System.out.print("    ");
         for(int j=1 ; j<=8 ; j++){
	    if((j>=2 && j<=7 && i==4)||(j>=3 && j<=6 && (i==3||i==5))||((j==4||j==5)&&(i==2 || i==6))){
		System.out.print("-  ");
	    }
            else System.out.print("*  ");
	 }
         System.out.println("\n");
      }
   }
}
